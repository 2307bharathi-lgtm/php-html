6) <?php
// Start session for session method
session_start();
$_SESSION['username'] = "John";

// Set cookie for cookie method
setcookie("username", "John", time() + 3600); // 1 hour expiry
?>
<!DOCTYPE html>
<html>
<head><title>Page 1</title></head>
<body>

<h2>Pass Data Between Pages in PHP</h2>

<!-- GET Method -->
<a href="page2.php?method=get&name=John&age=25">Go to Page 2 (GET)</a>
<br><br>

<!-- POST Method -->
<form action="page2.php" method="post">
    <input type="hidden" name="method" value="post">
    Name: <input type="text" name="name" value="John"><br>
    Age: <input type="number" name="age" value="25"><br>
    <input type="submit" value="Go to Page 2 (POST)">
</form>

<br>

<!-- SESSION Method -->
<a href="page2.php?method=session">Go to Page 2 (SESSION)</a>
<br><br>

<!-- COOKIE Method -->
<a href="page2.php?method=cookie">Go to Page 2 (COOKIE)</a>

</body>
</html>
