<?php
// Example marks
$marks = 68; // You can change this value or take input from a form

echo "Marks: $marks% → ";

if ($marks >= 75) {
    echo "First Class";
} elseif ($marks >= 60 && $marks <= 74) {
    echo "Second Class";
} elseif ($marks >= 40 && $marks <= 59) {
    echo "Third Class";
} else {
    echo "Fail";
}
?>
