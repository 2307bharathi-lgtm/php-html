19) <?php
// Define the function to find highest and lowest values
function findHighLow($numbers) {
    $highest = max($numbers);
    $lowest = min($numbers);
    
    return array('highest' => $highest, 'lowest' => $lowest);
}

// Example array of numbers
$numberArray = array(10, 45, 2, 99, 7, 34, 65);

// Call the function and get the result
$result = findHighLow($numberArray);
?>

<!DOCTYPE html>
<html>
<head>
    <title>High & Low Finder</title>
</head>
<body>

<h2>High
<?php
function findMinMax($numbers) {
    $min = min($numbers);
    $max = max($numbers);
    return array("min" => $min, "max" => $max);
}

// Example array
$numbersArray = array(45, 12, 98, 23, 67, 5, 89);

$result = findMinMax($numbersArray);

echo "Array: " . implode(", ", $numbersArray) . "<br>";
echo "Lowest Value: " . $result['min'] . "<br>";
echo "Highest Value: " . $result['max'];
?>
Array: 45, 12, 98, 23, 67, 5, 89<br>Lowest Value: 5<br>Highest Value: 98


